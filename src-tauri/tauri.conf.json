{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ask Pete",
  "version": "0.1.0",
  "identifier": "edu.purdue.askpete",
  "build": {
    "frontendDist": "../target/site",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "cd frontend && trunk serve",
    "beforeBuildCommand": "cd frontend && trunk build --release"
  },
  "app": {
    "windows": [
      {
        "title": "Ask Pete",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}